<Window x:Class="Imenik.UD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Imenik"
        mc:Ignorable="d"
        Title="UD" Height="600" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="nameText" Margin="0,5,0,0"/>
            <Label Content="Name:" HorizontalAlignment="Left"/>
            <TextBox x:Name="emailText" Margin="0,5,0,5"/>
            <TextBox x:Name="phoneText" Margin="0,5,0,5"/>
            <Button Content="DELETE"
                    x:Name="deletebutton"
                    Background="Red"
                    Foreground="White"
                    Click="deletebutton_Click"/>
            <Button Content="UPDATE"
                    Background="Green"
                    Foreground="White"
                    x:Name="updatebutton"
                    Click="updatebutton_Click"/>
        </StackPanel>
    </Grid>
</Window>
